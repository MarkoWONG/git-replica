#!/bin/dash

if [ -d .girt ] || [ -d .girt/adds ]
then 
    for file in $@
    do
        if [ -f "$file" ] &&  echo "$file" | egrep -q ^[a-zA-Z0-9][a-zA-Z0-9_.-]*$
        then 
            cp "$file" ".girt/adds";
        else
            echo "girt-add: error: can not open '"$file"'";
            exit 1;
        fi
    done
else
    echo "girt-add: error: girt repository directory .girt not found"
    exit 1;
fi
exit 0;